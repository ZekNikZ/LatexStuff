\ProvidesPackage{labreport}[2019-01-23 a package for templates for Baylor Physics lab reports]

\usepackage{fancyhdr}
\usepackage{changepage}

\newcommand*{\course}[1]{\gdef\@course{#1}}
\newcommand*{\@course}{Physics 1420}

\newcommand*{\coursesection}[1]{\gdef\@coursesection{#1}}
\newcommand*{\@coursesection}{C2}

\newcommand*{\supervisor}[1]{\gdef\@supervisor{#1}}
\newcommand*{\@supervisor}{\texttt{\string\supervisor} currently
not set. Please fix this.}

\newcommand*{\partner}[1]{\gdef\@partners{Partner: #1}}
\newcommand*{\partners}[1]{\gdef\@partners{Partners: #1}}
\newcommand*{\@partners}{Partner: Stephen Hunt}

\newcommand{\reportabstract}[1]{\gdef\@abstract{#1}\gdef\@abstractheading{Abstract}}
\newcommand{\@abstract}{}
\newcommand{\@abstractheading}{}

\renewcommand{\abstract}{{\centering\large\textbf{\textit{\@abstractheading}}\par}\vspace{5mm}}

\renewcommand*{\maketitle}{%
\begin{titlepage}
	\thispagestyle{fancy}
	\fancyhf{}
	\renewcommand{\headrulewidth}{0pt}
	\cfoot{\thepage}
	
	{
		\begingroup
		\topskip0pt
		\vspace*{15mm}%
		\endgroup
		\centering
		{\LARGE\@course\ \ Section \@coursesection\unskip\strut\par}
		\vspace{8mm}
		{\LARGE\textit{\textbf{\MakeUppercase\@title}}\unskip\strut\par}
		\vspace{12mm}
		{\LARGE\textbf{\@author}\unskip\strut\par}
		\vspace{10mm}
		{\large\@partners\unskip\strut\par}
		\vspace{4mm}
		{\large Date Performed: \@date\unskip\strut\par}
		\vspace{4mm}
		{\large \textbf{TA: \@supervisor}\unskip\strut\par}
		\vspace{35mm}
	}
	\begin{abstract}
		\noindent\@abstract
	\end{abstract}

	\vfill
\end{titlepage}

\setcounter{page}{2}
}

\newcounter{calculationnumber}
\newenvironment{samplecalculations}{{\centering\large\textbf{\textit{Sample Calculations}}\par}\vspace{5mm}}{}
\newenvironment{calculation}[1]{\refstepcounter{calculationnumber}\noindent\thecalculationnumber. #1\par}{}
\newenvironment{calcnote}{\begin{adjustwidth}{1cm}{1cm}}{\end{adjustwidth}}

\newenvironment{questions}{{\centering\large\textbf{\textit{Answers to Questions}}\par}\vspace{5mm}}{}
\newenvironment{questionanswer}[2]{\noindent\textbf{Question #1: \textit{#2}}\par\noindent}{\vspace{3mm}}

\newenvironment{discussion}{{\centering\large\textbf{\textit{Discussion}}\par}\vspace{5mm}}{}

\newcommand*{\advancepage}[1]{\pagebreak\setcounter{page}{#1}}

\endinput